<div class="form-group">
  <label>LTI Launch URL</label>
  {{input type="text" 
          value=url
          class="form-control" 
          placeholder="https://"
          data-placement="bottom"
          data-toggle="popover" 
          data-content="CONTENT NEEDED"}}
</div>
<div class="form-group">
  <label>Link Text</label>
  {{input type="text" 
          value=text
          class="form-control" 
          placeholder=""
          data-placement="bottom"
          data-toggle="popover" 
          data-content="CONTENT NEEDED"}}
</div>
{{#if isCourseNav}}
  <div class="form-group">
    <label>Visibility</label>
    {{view Ember.Select
           contentBinding="App.visibilityOptions"
           optionValuePath="content.value"
           optionLabelPath="content.name"
           valueBinding=visibility
           class="form-control"}}
  </div>
  <div class="checkbox">
    <label>
      {{input type="checkbox" checked=default}}
      Enabled by default?
    </label>
  </div>
{{/if}}
</div>
<div class="checkbox">
  <label>
    {{input type="checkbox" checked=is_optional}} Is this extension optional?
  </label>
</div>