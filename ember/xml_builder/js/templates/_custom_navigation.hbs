{{#with view}}

<fieldset>
  <legend>
    <label class="extension-checkbox pull-right">
      {{input type="checkbox" checked=content.isEnabled}} Enabled?
    </label>
    Extension: {{displayName}}
  </legend>
  <div class="well well-small">
    {{#if content.isEnabled}}
      <div class="form-group">
        <label>LTI Launch URL</label>
        {{input type="text" 
                value=content.launchUrl 
                class="form-control" 
                placeholder="https://"
                data-placement="bottom"
                data-toggle="popover" 
                data-content="CONTENT NEEDED"}}
      </div>
      <div class="form-group">
        <label>Link Text</label>
        {{input type="text" 
                value=content.linkText 
                class="form-control" 
                placeholder=""
                data-placement="bottom"
                data-toggle="popover" 
                data-content="CONTENT NEEDED"}}
      </div>
      {{#if displayExtras}}
        <div class="form-group">
          <label>Visibility</label>
          {{view Ember.Select
                 contentBinding="App.visibilityOptions"
                 optionValuePath="content.value"
                 optionLabelPath="content.name"
                 valueBinding=content.visibility
                 class="form-control"}}
        </div>
        <div class="checkbox">
          <label>
            {{input type="checkbox" checked=content.enabledByDefault}}
            Enabled by default?
          </label>
        </div>
      {{/if}}
      </div>
      <div class="checkbox">
        <label>
          {{input type="checkbox" checked=content.isOptional}} Is this extension optional?
        </label>
      </div>
    {{else}}
      <div class="text-center">Click the checkbox above to enable this extension</div>
    {{/if}}
  </div>
</fieldset>

{{/with}}