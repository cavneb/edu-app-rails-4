{{#with view}}

  <fieldset>
    <legend>
      <label class="extension-checkbox pull-right">
        {{input type="checkbox" checked=content.enabled}} Enabled?
      </label>
      Extension: {{displayName}}
    </legend>
    <div class="well well-small">
      {{#if content.enabled}}
        <div class="form-group">
          <label>LTI Launch URL</label>
          {{input type="text" 
                  value=content.url
                  class="form-control" 
                  placeholder="https://"
                  data-placement="bottom"
                  data-toggle="popover" 
                  data-content="CONTENT NEEDED"}}
        </div>
        <div class="form-group">
          <label>Link Text</label>
          {{input type="text" 
                  value=content.text
                  class="form-control" 
                  placeholder=""
                  data-placement="bottom"
                  data-toggle="popover" 
                  data-content="CONTENT NEEDED"}}
        </div>
        <div class="form-group">
          <label>Icon URL</label>
          {{input type="text" 
                  value=content.icon_url 
                  class="form-control"
                  data-placement="bottom"
                  data-toggle="popover" 
                  data-content="CONTENT NEEDED"}}
        </div>
        <div class="row">
          <div class="form-group col-6">
            <label>Width (px)</label>
            {{input type="text" 
                  value=content.selection_width
                  class="form-control"
                  data-placement="bottom"
                  data-toggle="popover" 
                  data-content="CONTENT NEEDED"}}
          </div>
          <div class="form-group col-6">
            <label>Height (px)</label>
            {{input type="text" 
                  value=content.selection_height
                  class="form-control"
                  data-placement="bottom"
                  data-toggle="popover" 
                  data-content="CONTENT NEEDED"}}
          </div>
        </div>
        <div class="checkbox">
          <label>
            {{input type="checkbox" checked=content.is_optional}} Is this extension optional?
          </label>
        </div>
      {{else}}
        <div class="text-center">Click the checkbox above to enable this extension</div>
      {{/if}}
    </div>
  </fieldset>

{{/with}}