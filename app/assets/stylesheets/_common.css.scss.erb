.padded {
  padding: 0 0 20px 0;
}

.page-header {
  border-bottom: 1px solid #efefef;
  margin-bottom: 10px;
  padding-bottom: 10px;
}

hr.dotted {
  border-top: 1px dotted #eeeeee;
}

.main-content {
  background-color: #fff;
  padding: 20px;

  .header {
    margin-bottom: 15px;
    h3 {
      margin: 0px;
    }
  }
}

span.stars, span.stars span {
  display: block;
  background: url(../images/star.png) 0 -16px repeat-x;
  width: 80px;
  height: 16px;
}

span.mini-stars, 
span.mini-stars span {
  background: url(../images/mini-star.png) 0 -10px repeat-x;
  width: 50px;
  height: 10px;
}

span.stars span,
span.mini-stars span {
  background-position: 0 0;
}

img.icon {
  width: 16px;
  height: 16px;
}

.nav-tabs {
  margin-bottom: 15px;
}


table.table-details {
  th {
    width: 200px;
  }
}

table.borderless {
  border: 0px;
  th, tr, thead, tbody, td {
    border: 0px !important;
  }
  margin: 0px;
}

.navbar .nav .dropdown-toggle .caret {
  margin-top: 0px;
}

legend {
  font-size: 16px;
}

.comment-count {
  display: block;
  width: 20px;
  height: 18px;
  background: transparent url(<%= asset_path("comments-bg.png") %>) no-repeat;
  color: #fff;
  text-align: center;
  font-size: 11px;
  line-height: 14px;
}

#filters-container {
  border: 1px solid darken($gray-lighter, 3%);
  margin-bottom: 15px;
  h3 {
    cursor: pointer;
    margin: 0px;
    font-size: 16px;
    font-weight: 300;
    padding: 10px;
    background-color: $gray-lighter;
    color: $gray-dark;
  }
  .panel-collapse {
    padding: 10px;
  }
}