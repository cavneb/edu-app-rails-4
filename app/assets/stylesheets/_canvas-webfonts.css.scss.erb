// add icon font
@font-face {
  font-family: 'canvasregular';
  src: url('<%= font_path("canvas-webfont.eot") %>');
  src: url('<%= font_path("canvas-webfont.eot") %>?#iefix') format('embedded-opentype'),
    url('<%= font_path("canvas-webfont.woff") %>') format('woff'),
    url('<%= font_path("canvas-webfont.ttf") %>') format('truetype'),
    url('<%= font_path("canvas-webfont.svg") %>#canvasregular') format('svg');
  font-weight: normal;
  font-style: normal;
}

// styles to ensure icons can only be applied through the <i> element, but also allowing
// to be applied directly to text links

i[class*=canvas-icon-], i[class^=canvas-icon-], a[class*=canvas-icon-], a[class^=canvas-icon-] {

  &:before {
    font-family: 'canvasregular';
    display: inline-block;
    vertical-align: middle;
    position: relative;
    top: -1px;
    text-rendering: optimizeLegibility;

    // the specific reason for this being in the :before and not part of the <i> was to get
    // .input-appends to work with .btns that had an <i> icon in them.
    font-size: 16px;

    // override any properties in the cascade that might make the font display incorrectly
    text-transform: none !important;
    font-weight: normal !important;
    font-style: normal !important;
  }

}

i[class*=canvas-icon-], i[class^=canvas-icon-] {
  display: inline-block;
  font-style: normal !important;
  width: 16px; height: 16px; line-height: 16px;

  // adjust icon sizes to look good with our large-size button class
  .btn-large & {
    width: 18px; height: 18px; line-height: 18px;
    &:before{ font-size: 18px }
  }

  // most icons do not look good this small, so use sparingly.
  // this should only be used for things like: icon-settings and icon-mini-arrow-down
  .btn-mini & {
    width: 12px; height: 12px; line-height: 12px;
    &:before{ font-size: 12px }
  }

}


// when an icon is applied directly to a link, add a little left margin to make
// things look nicer
a[class*=canvas-icon-], a[class^=canvas-icon-] {
  &:before { margin-right: 4px; }
}

// icons should be a little lighter than the text in a .btn,
// we're aware and ok that this wont have any effect in ie8
.btn:not(.btn-primary, .btn-warning, .btn-danger, .btn-success, .btn-info, .btn-inverse) {
  i[class*=canvas-icon-], i[class^=canvas-icon-] {
    color: "#333";
  }
}

.standalone-icon {
  // use to make standalone icons within links display as dark gray, not default link blue
  &:before { color: #555; }
}

// change vertical alignment of icons used with common typographic elements to line them up better
h1, h2, h3, h4, .h1, .h2, .h3, .h4, p {

  i[class*=canvas-icon-]:before, i[class^=canvas-icon-]:before {
    vertical-align: baseline;
  }

}


