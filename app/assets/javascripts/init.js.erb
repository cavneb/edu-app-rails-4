$(function() {
  var flash = $('#flash-view #message');
  if (flash) {
    flash.delay(3000).fadeToggle(1000);
  }

  var clip = new ZeroClipboard($(".copy-button"), { moviePath: "<%= asset_path('ZeroClipboard.swf') %>" });
  clip.on('complete', function(client, args) {
    alert("Copied!");
  });

  SyntaxHighlighter.all();
})
