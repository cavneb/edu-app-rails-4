<div class="main-content">
  <div class="header clearfix">
    <%= link_to raw("<i class='icon-pencil'></i> Edit"), edit_organization_path(@organization), class: "pull-right btn btn-info btn-xs" %>
    <h3 class="page-header">Organization: <%= @organization.name %></h3>
  </div>

  <ul class="breadcrumb">
    <li><%= link_to "Organizations", organizations_url %></li>
    <li class="active"><%= @organization.name %></li>
  </ul>

  <fieldset>
    <legend>API Keys</legend>
    <%= render partial: "/shared/api_keys_table", locals: { api_keys: @organization.api_keys } %>
  </fieldset>

  <fieldset>
    <legend>Apps</legend>
    <%= render partial: "/shared/apps_table", locals: { apps: @organization.lti_apps } %>
  </fieldset>

  <fieldset>
    <legend>Members</legend>
    <%= render partial: "/shared/memberships_table", locals: { memberships: @organization.memberships } %>
  </fieldset>

</div>