<div class="row">
  <div class="col-sm-8 col-lg-6 col-sm-offset-2 col-lg-offset-3">
    <h2 class="text-center padded">Sign Up</h2>

    <div class="row">
      <div class="col-6">
        <%= link_to raw("<i class='icon-twitter icon-large'></i> Login with Twitter"), "/auth/twitter", class: "btn btn-lg btn-info btn-block" %>
        <%= link_to raw("<i class='icon-github icon-large'></i> Login with Github"), "/auth/github", class: "btn btn-lg btn-info btn-block" %>
      </div>
      <div class="col-6">
        <%= link_to raw("<i class='icon-facebook icon-large'></i> Login with Facebook"), "/auth/facebook", class: "btn btn-lg btn-info btn-block" %>
        <%= link_to raw("<i class='icon-google-plus icon-large'></i> Login with Google"), "/auth/google_oauth2", class: "btn btn-lg btn-info btn-block" %>
      </div>
    </div>

    <h5 class="text-center" style="margin-top: 30px;">or register below</h5>

    <%= form_for @user, html: { class: "chunky-form" } do |f| %>
      <div class="form-group <% if @user.errors.include? :name %>has-error<% end %>">
        <%= f.text_field :name, class: "form-control input-lg", placeholder: "Full Name" %>
        <% if @user.errors.include? :name %>
          <small class="help-block"><%= @user.errors.full_messages_for(:name).first %></small>
        <% end %>
      </div>

      <div class="form-group <% if @user.errors.include? :email %>has-error<% end %>">
        <%= f.text_field :email, class: "form-control input-lg", placeholder: "Email Address" %>
        <% if @user.errors.include? :email %>
          <small class="help-block"><%= @user.errors.full_messages_for(:email).first %></small>
        <% end %>
      </div>

      <div class="form-group <% if @user.errors.include? :password %>has-error<% end %>">
        <%= f.password_field :password, class: "form-control input-lg", placeholder: "Password" %>
        <% if @user.errors.include? :password %>
          <small class="help-block"><%= @user.errors.full_messages_for(:password).first %></small>
        <% end %>
      </div>

      <div class="form-group <% if @user.errors.include? :password_confirmation %>has-error<% end %>">
        <%= f.password_field :password_confirmation, class: "form-control input-lg", placeholder: "Confirm Password" %>
        <% if @user.errors.include? :password_confirmation %>
          <small class="help-block"><%= @user.errors.full_messages_for(:password_confirmation).first %></small>
        <% end %>
      </div>

      <p>
        <button type="submit" class="btn btn-lg btn-info pull-right">Register</button>
        Already have an account? <%= link_to "Login here", login_path %>
      </p>
    <% end %>
  </div>
</div>
