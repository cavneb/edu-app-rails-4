<div id="header" class="navbar navbar-fixed-top">
  <div class="container">
    <%= link_to raw("<i class='icon-cog'></i> Edu Apps"), root_url, class: "navbar-brand" %>

    <!-- .navbar-toggle is used as the toggle for collapsed navbar content -->
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>

    <div class="nav-collapse collapse navbar-responsive-collapse">
      <ul class="nav navbar-nav pull-right">
        <li<% if @active_tab == 'apps' %> class="active"<% end %>><%= link_to "Apps", root_url %></li>
        <li<% if @active_tab == 'tutorials' %> class="active"<% end %>><%= link_to "Tutorials", tutorials_path("canvas") %></li>
        <li<% if @active_tab == 'docs' %> class="active"<% end %>><%= link_to "Docs", docs_path(section: "basics", page: "index") %></li>
        <li<% if @active_tab == 'submit' %> class="active"<% end %>><%= link_to "Submit", new_lti_app_path %></li>

        <% if current_user %>
          <li class="dropdown <% if @active_tab == 'my_stuff' %>active <% end %>">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to raw('<i class="icon-code"></i> Configurations'), xml_builder_path %></li>
              <li><%= link_to raw('<i class="canvas-icon-standards"></i> LTI Apps'), my_lti_apps_path %></li>
              <li><%= link_to raw('<i class="canvas-icon-user"></i> Edit Profile'), edit_profile_path %></li>
              <li><%= link_to raw('<i class="icon-link"></i> Linked Accounts'), authentications_path %></li>
              <li><%= link_to raw('<i class="icon-building"></i> Organizations'), organizations_path %></li>
              <% if current_user.try(:is_admin?) %>
                <li role="presentation" class="divider"></li>
                <li><%= link_to raw('<i class="icon-group"></i> Manage Users'), users_path %></li>
                <li><%= link_to raw('<i class="icon-trash"></i> Deleted Apps'), deleted_lti_apps_path %></li>
              <% end %>
            </ul>
          </li>
          <li><%= link_to "Logout", logout_path %></li>
        <% else %>
          <li<% if @active_tab == 'login' %> class="active"<% end %>><%= link_to "Login", new_session_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>