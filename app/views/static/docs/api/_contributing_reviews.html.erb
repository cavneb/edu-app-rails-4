  <div class="tab-pane active" id="ruby">
    <pre class="brush: ruby">
require 'net/http'

data = { lti_app_id: '<%= LtiApp.first.short_name %>',
       access_token: 'YOUR_ACCESS_TOKEN_HERE',
       rating: 5,
       user_name: 'Jon Smith',
       user_email: 'jon.smith@example.com',
       user_id: '3884513',
       user_url: 'http://example.com/user',
       user_avatar_url: 'http://example.com/user/avatar/50x50.png',
       comments: 'This is a really great app!' }

uri = URI('<%= root_url %>api/v1/reviews')
res = Net::HTTP.post_form(uri, data)
body = res.body
    </pre>
  </div>
  <div class="tab-pane" id="python">
    <pre class="brush: python">
import urllib
import urllib2

url = '<%= root_url %>api/v1/reviews'
values = { 'lti_app_id': '<%= LtiApp.first.short_name %>',
         'access_token': 'YOUR_ACCESS_TOKEN_HERE',
         'rating': 5,
         'user_name': 'Jon Smith',
         'user_email': 'jon.smith@example.com',
         'user_id': '3884513',
         'user_url': 'http://example.com/user',
         'user_avatar_url': 'http://example.com/user/avatar/50x50.png',
         'comments': 'This is a really great app!' }
         
data = urllib.urlencode(values)
response = urllib2.urlopen(url + '?' + data)
body = response.read()
    </pre>
