<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>App</th>
      <th>Rating</th>
      <th>Comments</th>
      <th>Created</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
  <% reviews.each do |review| %>
    <tr>
      <td><%= icon(review.lti_app.icon_url) %> <%= link_to review.lti_app.name, review.lti_app %></td>
      <td><%= star_rating(review.rating, "mini") %></td>
      <td><%= review.comments %></td>
      <td><%= review.created_at.strftime("%b %d, %Y") %></td>
      <td><button class="btn btn-danger btn-xs"><i class="icon-remove"></i></button></td>
    </tr>
  <% end %>
  </tbody>
</table>