<%= simple_form_for [:admin, @user], html: { role: 'form' } do |f| %>
  <%= render "/admin/shared/error_explanation", obj: @user %>
  <%= f.input :is_admin, label: "Checked if this user is a global admin (canvas)" %>
  <%= f.input :name %>
  <%= f.input :email %>
  <%= f.input :avatar_url %>
  <%= f.input :url %>
  <%= f.input :twitter_nickname, label: "Twitter Nickname (for account linking)" %>
  <%= render "/admin/shared/save_cancel", cancel_link: admin_users_path %>
<% end %>
