<li data-name="<%= lti_app.name %>" data-tags="<%= lti_app.tags.pluck(:id).join(',') %>" class="lti-app as-list col-12 col-sm-6 col-lg-4">

  <div class="row details-view clearfix" style="display: none;">
    <div class="col-sm-2">
      <%= link_to image_tag(lti_app.banner_image_url, alt: lti_app.name, class: "img-thumbnail"), lti_app_path(lti_app.short_name) %>
    </div>
    <div class="col-sm-10">
      <p class="title">
        <%= link_to lti_app.name, lti_app_path(lti_app.short_name) %>
      </p>
      <div class="meta">
        <p class="description">
          <%= lti_app.short_description %>
        </p>
      </div>
    </div>
  </div>

  <div class="thumbnail-view thumbnail">
    <%= link_to image_tag(lti_app.banner_image_url, alt: lti_app.name, class: "img-thumbnail", width: 240, height: 125, style: "width: 240px; height: 125px;"), lti_app_path(lti_app.short_name) %>
    <div class="title">
      <%= link_to lti_app.name, lti_app_path(lti_app.short_name) %>
    </div>
  </div>

</li>